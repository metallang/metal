    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'metal'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=metal",
                    "--package=metal"
                ],
                "filter": {
                    "name": "metal",
                    "kind": "bin"
                }
            },
            "args": ["dev", "parse", ".\\code.rs"],
            "cwd": "${workspaceFolder}"
        }
    ]
}